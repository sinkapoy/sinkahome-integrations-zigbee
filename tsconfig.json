{
    "compilerOptions": {
        "target": "ES2017",
        "module": "es2022",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "allowJs": true,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "rootDir": "./",
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "lib": [
            "dom",
            "esnext",
            "ES2018"
        ],
        "paths": {
            "@widgets/*": [
                "./*"
            ]
        },
        "skipDefaultLibCheck": true,
        "declaration": true,
        "declarationDir": "dist"
    },
    "typeRoots": [
        "node_modules/@types",
        "types",
        "src/types"
    ],
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}